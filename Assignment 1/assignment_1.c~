#include <stdio.h>
#include "assignment_1.h"

//Problem 1: Factorial Calculator
int CalculateFactorial(int number){
  int answer = 1;
  if(number < 0){
    return 0;
  }
  for(int i = number; i > 0; --i){
    answer *= i;
  }
  return answer;
}

